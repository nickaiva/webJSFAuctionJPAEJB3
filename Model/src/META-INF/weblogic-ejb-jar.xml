<?xml version = '1.0' encoding = 'UTF-8'?>
<weblogic-ejb-jar xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://www.bea.com/ns/weblogic/weblogic-ejb-jar http://www.bea.com/ns/weblogic/weblogic-ejb-jar/1.0/weblogic-ejb-jar.xsd"
                  xmlns="http://www.bea.com/ns/weblogic/weblogic-ejb-jar">
 <weblogic-enterprise-bean>
        <ejb-name>PlaceItemsInCategories</ejb-name>
        <stateless-session-descriptor/>
        <enable-call-by-reference>true</enable-call-by-reference>
        <jndi-name>ejb/PlaceItemsInCategories</jndi-name>
        <dispatch-policy>DatabaseWorkManager</dispatch-policy>
    </weblogic-enterprise-bean>
    <weblogic-enterprise-bean>
        <ejb-name>PlaceBid</ejb-name>
        <stateless-session-descriptor/>
        <enable-call-by-reference>true</enable-call-by-reference>
        <jndi-name>ejb/PlaceBid</jndi-name>
        <dispatch-policy>DatabaseWorkManager</dispatch-policy>
    </weblogic-enterprise-bean>
   <weblogic-enterprise-bean>
        <ejb-name>AddUser</ejb-name>
        <stateless-session-descriptor/>
        <enable-call-by-reference>true</enable-call-by-reference>
        <jndi-name>ejb/AddUser</jndi-name>
        <dispatch-policy>DatabaseWorkManager</dispatch-policy>
    </weblogic-enterprise-bean>
    <weblogic-enterprise-bean>
        <ejb-name>PlaceItem</ejb-name>
        <stateless-session-descriptor/>
        <enable-call-by-reference>true</enable-call-by-reference>
        <jndi-name>ejb/PlaceItem</jndi-name>
        <dispatch-policy>DatabaseWorkManager</dispatch-policy>
    </weblogic-enterprise-bean>
    <weblogic-enterprise-bean>
        <ejb-name>PlaceCategory</ejb-name>
        <stateless-session-descriptor/>
        <enable-call-by-reference>true</enable-call-by-reference>
        <jndi-name>ejb/PlaceCategory</jndi-name>
        <dispatch-policy>DatabaseWorkManager</dispatch-policy>
    </weblogic-enterprise-bean>
    <weblogic-enterprise-bean>
        <ejb-name>PlaceBillingInfo</ejb-name>
        <stateless-session-descriptor/>
        <enable-call-by-reference>true</enable-call-by-reference>
        <jndi-name>ejb/PlaceBillingInfo</jndi-name>
        <dispatch-policy>DatabaseWorkManager</dispatch-policy>
    </weblogic-enterprise-bean>
    <weblogic-enterprise-bean>
        <ejb-name>PlaceOrder</ejb-name>
        <stateless-session-descriptor/>
        <enable-call-by-reference>true</enable-call-by-reference>
        <jndi-name>ejb/PlaceOrder</jndi-name>
        <dispatch-policy>DatabaseWorkManager</dispatch-policy>
    </weblogic-enterprise-bean>
      <weblogic-enterprise-bean>
        <ejb-name>ManageContactInfo</ejb-name>
        <stateless-session-descriptor/>
        <enable-call-by-reference>true</enable-call-by-reference>
        <jndi-name>ejb/ManageContactInfo</jndi-name>
        <dispatch-policy>DatabaseWorkManager</dispatch-policy>
    </weblogic-enterprise-bean>
     <weblogic-enterprise-bean>
        <ejb-name>PlaceShippingInfo</ejb-name>
        <stateless-session-descriptor/>
        <enable-call-by-reference>true</enable-call-by-reference>
        <jndi-name>ejb/PlaceShippingInfo</jndi-name>
        <dispatch-policy>DatabaseWorkManager</dispatch-policy>
    </weblogic-enterprise-bean>
    <work-manager>
        <name>DatabaseWorkManager</name>
        <response-time-request-class>
            <name>DatabaseResponseClass</name>
            <goal-ms>50</goal-ms>
        </response-time-request-class>
        <min-threads-constraint>
            <name>DatabaseMinThread</name>
            <count>1</count>
        </min-threads-constraint>
        <max-threads-constraint>
            <name>DatabaseMaxThread</name>
            <pool-name>ActionBazaarEJB3inActionDS</pool-name>
        </max-threads-constraint>
        <capacity>
            <name>DatabaseCapacity</name>
            <count>100</count>
        </capacity>
        <work-manager-shutdown-trigger>
            <max-stuck-thread-time>600</max-stuck-thread-time>
            <stuck-thread-count>10</stuck-thread-count>
        </work-manager-shutdown-trigger>
    </work-manager>
</weblogic-ejb-jar>
